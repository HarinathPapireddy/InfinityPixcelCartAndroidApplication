<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BottomNavFragments.loginFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@id/editTextUsernameFragment"
            android:layout_width="371dp"
            android:layout_height="54dp"
            android:drawableStart="@drawable/user_24"
            android:drawablePadding="18dp"
            android:hint="Username"
            android:inputType="text" />


        <EditText
            android:id="@+id/editTextPasswordFragment"
            android:layout_width="372dp"
            android:layout_height="50dp"

            android:drawableStart="@drawable/lock_24"
            android:drawablePadding="19dp"
            android:hint=" Password"
            android:inputType="textPassword" />
        <Button
            android:id="@+id/buttonLoginFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login" />
        <TextView
            android:id="@+id/textViewForgotPasswordFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="8dp"
            android:text="Forgot Password?" />

        <TextView
            android:id="@+id/textViewRegisterFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="16dp"
            android:text="Don't have an account? Register" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTint="#FAF9F9"
    tools:context=".Intents.User_Registration">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="414dp"
        android:layout_height="394dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/registerbackground" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView3">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10sp"
                android:text="User\nRegistration"
                android:textColor="#6672FF"
                android:textSize="34dp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/editTextRegistrationName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/user_24"
                android:drawablePadding="18dp"
                android:hint="Name"
                android:inputType="text"
                android:paddingBottom="10sp" />

            <EditText
                android:id="@+id/editTextRegistrationUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/id_card_clip_alt_24"
                android:drawablePadding="18dp"
                android:hint="Username"
                android:inputType="text"
                android:paddingBottom="10sp" />
            <EditText
                android:id="@+id/editTextRegistrationPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/lock_24"
                android:drawablePadding="18dp"
                android:hint="Password"

                android:inputType="text"
                android:paddingBottom="10sp" />


            <EditText
                android:id="@+id/editTextRegistrationConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/lock_24"
                android:drawablePadding="18dp"
                android:hint="Confirm Password"

                android:inputType="text"
                android:paddingBottom="10sp" />

            <EditText
                android:id="@+id/editTextRegistrationEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/envelopes_24"
                android:drawablePadding="18dp"
                android:hint="Email"

                android:inputType="text"
                android:paddingBottom="10sp" />

            <EditText
                android:id="@+id/editTextRegistrationPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/phone"
                android:drawablePadding="18dp"
                android:hint="Phone"

                android:inputType="number"
                android:paddingBottom="10sp" />

            <RadioGroup
                android:id="@+id/genderRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="10sp">

                <TextView
                    android:id="@+id/Gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textSize="20dp" />

                <RadioButton
                    android:id="@+id/Male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male" />

                <RadioButton
                    android:id="@+id/Female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female" />

                <RadioButton
                    android:id="@+id/Others"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Others" />


            </RadioGroup>

            <Button
                android:id="@+id/userRegistrationButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10sp"

                android:text="Register" />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
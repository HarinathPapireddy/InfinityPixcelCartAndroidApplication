<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialobox">


    <ImageView
        android:id="@+id/cancel_button"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:scaleType="centerCrop"
        android:src="@drawable/minus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cancel_button">

        <EditText
            android:id="@+id/add_address_holder_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:drawableStart="@drawable/user_24"
            android:drawablePadding="10sp"/>

        <EditText
            android:id="@+id/add_address_holder_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone"
            android:drawableStart="@drawable/phone"
            android:drawablePadding="10sp"/>

        <EditText
            android:id="@+id/add_address_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address Type"
            android:drawableStart="@drawable/home_24"
            android:drawablePadding="10sp"/>

        <EditText
            android:id="@+id/add_address_line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Line1"
            android:drawableStart="@drawable/location"
            android:drawablePadding="10sp"/>

        <EditText
            android:id="@+id/add_address_line2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Line2"
            android:drawableStart="@drawable/location"
            android:drawablePadding="10sp"/>

        <EditText
            android:id="@+id/add_address_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="City"
            />

        <EditText
            android:id="@+id/add_address_pincode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pincode" />

        <EditText
            android:id="@+id/add_address_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="State" />

        <EditText
            android:id="@+id/add_address_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Country" />

        <Button
            android:id="@+id/address_add_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Add Address" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>